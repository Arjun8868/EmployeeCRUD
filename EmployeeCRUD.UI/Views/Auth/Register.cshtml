@model EmployeeCRUD.UI.Models.RegisterUserViewModel

<h1 class="mt-3">Register User</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Username</label>
        <input type="text" class="form-control" asp-for="UserName" />
    </div>

    <div class="mt-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="Password" />
    </div>

    <div class="mt-3">
        <label class="form-label">Roles</label><br />
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="Roles" value="Reader"
                   @(Model?.Roles != null && Model.Roles.Contains("Reader") ? "checked" : "") />
            <label class="form-check-label">Reader</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="Roles" value="Writer"
                   @(Model?.Roles != null && Model.Roles.Contains("Writer") ? "checked" : "") />
            <label class="form-check-label">Writer</label>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>
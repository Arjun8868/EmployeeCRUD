@model IEnumerable<EmployeeCRUD.UI.Models.DTO.EmployeeDTO>
<h1 class="mt-3">Employees</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Employees" asp-action="Add">Add Employee</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
           
            <th>Email</th>
            <th>Phone Number</th>
            <th>Salary</th>
            <th> </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>@employee.Salary</td>
                <td>
                    <div class="text-center">
                        <a class="btn btn-primary" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                    </div>
                  
                </td>
                
            </tr>
        }
    </tbody>
</table>



